<center>
  <div style="padding-top: 50px;">
    <%= form_tag(assignments_path, method: "get") do %>
      <%= text_field_tag :phone_number, params[:phone_number] %>
      <%= submit_tag "Find" %>
    <% end %>

    <div style="padding-top: 10px; color:red;" ><%= @message %></div>

    <% if @words %>
      <div style="color:blue; font-weight: bold; size: 16px;">
        Result: <%= @words %>
      </div>
    <% end %>
  </div>
</center>